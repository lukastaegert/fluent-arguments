{
  "name": "fluent-arguments",
  "description": "When simple arguments just don't cut it",
  "author": "Lukas Taegert <lukas.taegert@tngtech.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "jsnext:main": "dist/index.mjs",
  "files": [
    "dist"
  ],
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lukastaegert/fluent-arguments.git"
  },
  "keywords": [
    "function arguments",
    "fluent",
    "API"
  ],
  "bugs": {
    "url": "https://github.com/lukastaegert/fluent-arguments/issues"
  },
  "homepage": "https://github.com/lukastaegert/fluent-arguments#readme",
  "dependencies": {
    "core-js": "^2.4.1"
  },
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-latest": "^6.24.1",
    "chai": "^4.0.0",
    "codecov": "^2.2.0",
    "eslint": "^4.2.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-tree-shaking": "^1.1.1",
    "husky": "^0.14.0",
    "istanbul": "^0.4.5",
    "lint-staged": "^4.0.0",
    "mocha": "^3.4.2",
    "prettier-standard": "^6.0.0",
    "rollup": "^0.45.1",
    "rollup-plugin-babel": "^2.7.1",
    "semantic-release": "^6.3.6",
    "testdouble": "^3.0.0",
    "validate-commit-msg": "^2.12.1"
  },
  "scripts": {
    "test": "node build && mocha",
    "lint": "prettier-standard *.js src/**/*.js test/**/*.js",
    "semantic-release": "node build && semantic-release pre && npm publish && semantic-release post",
    "precommit": "lint-staged",
    "commitmsg": "validate-commit-msg",
    "prepush": "npm test",
    "postmerge": "npm install && npm prune",
    "postrewrite": "npm install && npm prune"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "eslint --fix",
      "git add"
    ]
  }
}

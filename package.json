{
  "name": "fluent-arguments",
  "description": "When simple arguments just don't cut it",
  "author": "Lukas Taegert <lukas.taegert@tngtech.com>",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "lint": "eslint .",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg",
      "pre-push": "npm test",
      "post-merge": "npm install && npm prune",
      "post-rewrite": "npm install && npm prune"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lukastaegert/fluent-arguments.git"
  },
  "keywords": [
    "function arguments",
    "fluent",
    "API"
  ],
  "bugs": {
    "url": "https://github.com/lukastaegert/fluent-arguments/issues"
  },
  "homepage": "https://github.com/lukastaegert/fluent-arguments#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "eslint-config-standard": "^6.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "ghooks": "^1.3.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2",
    "semantic-release": "^6.3.2",
    "standard": "^8.0.0",
    "testdouble": "^1.6.0",
    "validate-commit-msg": "^2.8.0"
  },
  "dependencies": {
    "object-assign": "^4.1.0"
  }
}
